\bigname{[[ name ]]}
\begin{flushleft}
\vspace{-44 pt}
{phone: [[ phone ]]} \\
{email: [[ email ]]} \\
[[% for adr in address %]]
{[[ adr ]]} \\
[[% endfor %]]

\vspace{4pt}{github: github.com/[[ github ]]} \\
%{web: http://[[ weblog ]]} \\
\end{flushleft}
\vspace{8pt}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

[[% if objective %]]
\begin{ressection}{Objective}
  \resitem{[[ objective ]]}
\end{ressection}
[[% endif %]]

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\begin{ressection} {Technical Skills}

[[% for skill in skills %]]
  \begin{reslist} {[[ skill.title ]]:}
    [[% for item in skill.list %]]
    \ressubitem{[[ item ]]}
    [[% endfor %]]
  \end{reslist}
[[% endfor %]]

\end{ressection}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\begin{ressection} {Work Experience}

[[% for job in work %]]
\begin{ressubsec} {[[ job.when ]]} {[[ job.title ]]} {[[ job.who ]]}
  [[% for item in job.duties %]]
    \ressubitem {[[ item ]]}
  [[% endfor %]]
\end{ressubsec}
[[% endfor %]]

\end{ressection}

